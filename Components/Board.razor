@using System.Drawing
@inject ConnectFour.GameState State
@inject IJSRuntime JS

<HeadContent>
    <style>
        :root {
            --board-bg:
                @ColorTranslator.ToHtml(BoardColor)
            ;
            --player1:
                @ColorTranslator.ToHtml(Player1Color)
            ;
            --player2:
                @ColorTranslator.ToHtml(Player2Color)
            ;
        }
    </style>
</HeadContent>

<!-- SONIDOS -->
<audio id="dropSound" src="sounds/drop.mp3"></audio>
<audio id="winSound" src="sounds/winner.mp3"></audio>

<script>
    function playDropSound() {
        const audio = document.getElementById("dropSound");
        if (audio) audio.play();
    }

    function playWinSound() {
        const audio = document.getElementById("winSound");
        if (audio) audio.play();
    }
</script>

<!-- BOTONES DE COLUMNAS -->
<nav>
    @for (byte i = 0; i < 7; i++)
    {
        var col = i;
        <span title="Click to play a piece" @onclick="() => PlayPiece(col)">üîΩ</span>
    }
</nav>

<!-- INDICADORES -->
<article>
    <button style="@ResetStyle" @onclick="ResetGame">Reset the game</button>
    <br />
    <span class="alert-danger">@errorMessage</span>
</article>

<!-- TURNO O GANADOR -->
@if (winnerMessage == "")
{
    <!-- MOSTRAR TURNO -->
    <div class="turn-indicator">
        <span class="turn-dot @(State.PlayerTurn == 1 ? "p1-dot" : "p2-dot")"></span>
        <strong>Player @State.PlayerTurn's Turn</strong>
        <span class="waiting">Waiting for move‚Ä¶</span>
    </div>
}
else
{
    <!-- MOSTRAR GANADOR -->
    <div class="winner-indicator">
        <span class="turn-dot @(winnerMessage.Contains("1") ? "p1-dot" : "p2-dot")"></span>
        <strong>@winnerMessage</strong>
        <span class="trophy">üèÜ</span>
    </div>
}

<!-- TABLERO -->
<div>
    <div class="board">
        @for (var i = 0; i < 42; i++)
        {
            <span class="container">
                <span></span>
            </span>
        }
    </div>

    @for (var i = 0; i < 42; i++)
    {
        <span class="@pieces[i]"></span>
    }
</div>

@code {

    // Par√°metros de colores
    [Parameter] public Color BoardColor { get; set; } = ColorTranslator.FromHtml("yellow");
    [Parameter] public Color Player1Color { get; set; } = ColorTranslator.FromHtml("red");
    [Parameter] public Color Player2Color { get; set; } = ColorTranslator.FromHtml("blue");

    // Estado del juego
    private string[] pieces = new string[42];
    private string winnerMessage = string.Empty;
    private string errorMessage = string.Empty;

    private string CurrentTurn =>
    (winnerMessage == string.Empty) ? $"Player {State.PlayerTurn}'s Turn" : "";

    private string ResetStyle =>
    (winnerMessage == string.Empty) ? "display:none;" : "";

    protected override void OnInitialized()
    {
        State.ResetBoard();
    }

    private async Task PlayPiece(byte col)
    {
        errorMessage = string.Empty;

        try
        {
            var player = State.PlayerTurn;
            var turn = State.CurrentTurn;
            var landingRow = State.PlayPiece(col);

            pieces[turn] = $"player{player} col{col} drop{landingRow}";

            // Sonido al caer
            await JS.InvokeVoidAsync("playDropSound");
        }
        catch (ArgumentException ex)
        {
            errorMessage = ex.Message;
        }

        // Detectar ganador
        winnerMessage = State.CheckForWin() switch
        {
            GameState.WinState.Player1_Wins => "Player 1 Wins!",
            GameState.WinState.Player2_Wins => "Player 2 Wins!",
            GameState.WinState.Tie => "It's a tie!",
            _ => ""
        };

        if (winnerMessage != "")
        {
            // Sonido de victoria
            await JS.InvokeVoidAsync("playWinSound");
        }
    }

    private void ResetGame()
    {
        State.ResetBoard();
        winnerMessage = string.Empty;
        errorMessage = string.Empty;
        pieces = new string[42];
    }
}